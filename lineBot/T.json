          },

           {
            "type": "box",
            "layout": "horizontal",
            "contents": [
              {
                "type": "text",
                "text": "มอบหมายให้:",
                "size": "md",
                "color": "#777777",
                "flex": 0
              },
              {
                "type": "text",
                "text": "'.$staffName.'",
                "size": "md",
                "color": "#777777",
                "align": "end"
              }
            ]
          },


        ]
      },
      {
        "type": "separator",
        "margin": "xxl"
      },

       {
            "type": "box",
            "layout": "horizontal",
            "contents": [
             
              {
                "type": "text",
                "text": "'.$data["issueDetail"].'",
                "size": "md",
                "color": "#777777",
                "align": "end"
              }
            ]
          }

      {
        "type": "separator",
        "margin": "xxl"
      },
      
    ]
